package com.fil.enrolmentapp.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;

import com.fil.enrolmentapp.beans.User;
import com.fil.enrolmentapp.manager.AppDBConnectionMgr;

public class UserDAO {
	
	private int userid;
	private int roleid;
	private User user;
	private String firstname;
	private String lastname;
	private String username;
	private String password;
	private String email;
	private String mobile;
	private String department;
	
	
	public UserDAO() {
		
		userid = 0;
		roleid = 0;
		firstname = "";
		lastname = "";
		username = "";
		password = "";
		email = "";
		mobile = "";
		department = "";
		user = null;
	}
	
	public List getAllUsers() {
		
		List<User> users = new ArrayList<User>();
		String userSQL = "select * from enrolmentapp.user";
		
		AppDBConnectionMgr mgr = AppDBConnectionMgr.getInstance();
		Connection con = null;
		Statement stmt = null;
		ResultSet rs = null;
		try {
			con = mgr.getConnection();
			stmt = con.createStatement();
			rs = stmt.executeQuery(userSQL);
			while(rs.next()) {
				User user = new User();
				user.setUserid(rs.getInt("iduser"));
				user.setUsername(rs.getString("username"));
				user.setPassword(rs.getString("password"));
				user.setFirstname(rs.getString("firstname"));
				user.setLastname(rs.getString("lastname"));
				user.setMobile(rs.getString("mobile"));
				user.setEmail(rs.getString("email"));
				user.setRoleid(rs.getInt("role"));
				
				users.add(user);
			}
			
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			mgr.closeConnection(con);
		}
		
		return users;
	}
	
	public User getUserByUsername(String username) {
		
		User user = new User();
		String userSQL = "select * from enrolmentapp.user where username="+username;
		AppDBConnectionMgr mgr = AppDBConnectionMgr.getInstance();
		Connection con = null;
		Statement stmt = null;
		ResultSet rs = null;
		
		try {
			con = mgr.getConnection();
			stmt = con.createStatement();
			rs = stmt.executeQuery(userSQL);
			if(rs.next()) {
				user.setUserid(rs.getInt("iduser"));
				user.setUsername(rs.getString("username"));
				user.setPassword(rs.getString("password"));
				user.setFirstname(rs.getString("firstname"));
				user.setLastname(rs.getString("lastname"));
				user.setMobile(rs.getString("mobile"));
				user.setEmail(rs.getString("email"));
				user.setRoleid(rs.getInt("role"));
				
				return user;
			}
			
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			mgr.closeConnection(con);
		}
		return user;
	}

}
